---
import Menu_close from '../assets/icons/Menu_close.astro';
let is_open = true;
---

<header>
  <div class="logo">Astro</div>
  <nav>
    <label role="button" class="nav-toggle" aria-label="Toggle navigation" aria-hidden="true">
      <input type="checkbox" />
      <!-- 怎么动态修改 is_open呢？ -->
      <Menu_close class="icon-menu" is_open={is_open} />
    </label>
    <ul class="menu">
      <li><a href="/">首sfs页</a></li>
      <li><a href="/blog/">博客</a></li>
      <li><a href="/tags/">标签</a></li>
      <li><a href="/placeholder/">jsonplaceholder</a></li>
      <li><a href="/api/">API</a></li>
      <li><a href="/about/">关于</a></li>
    </ul>
  </nav>
</header>
<script>
  //导航生命周期钩子
  document.addEventListener('astro:page-load', () => {
    const href = location.pathname.match(/^\/\w+\//);

    let current_href = href ? href[0] : '/';

    current_href = current_href.replace('posts', 'blog');
    const active = document.querySelector(`li:has(a[href^="${current_href}"])`);
    if (active) {
      active.classList.add('active');
    }
  });
</script>

<style>
  .active {
    background-color: #6aa;
    a {
      text-decoration: underline;
    }
  }
  /* 样式 */
  header {
    z-index: 10;
    --c-shadow: rgba(0, 0, 0, 0.3);
    width: 100%;
    box-shadow: 0 1px 1px var(--c-shadow);
    /* border-bottom: 1px solid #ccc; */
    background-color: #dee;
    height: var(--header-h);
    color: #4ac;
    @media ((prefers-color-scheme: dark)) {
      background-color: #444;
      color: #4be;
    }
    display: flex;
    justify-content: space-between;
    position: fixed;
    top: 0;
  }
  .logo {
    cursor: pointer;
    font-size: 2rem;
    font-weight: bold;
    padding: 0 1rem;
    height: var(--header-h);
    line-height: var(--header-h);
  }

  nav {
    position: relative;
    height: 100%;
  }

  label.nav-toggle {
    height: var(--header-h);
    width: var(--header-h);
    line-height: var(--header-h);
    text-align: center;
    cursor: pointer;
    user-select: none;
    margin-right: 1rem;
    display: flex;
    place-items: center;

    &:hover {
      box-shadow: inset 0 0 0 2px var(--c-shadow);
    }
    input {
      position: absolute; /* 不让它影响文档流，影响.icon-menu的位置 */
      display: none;
    }
  }
  .icon-menu {
    display: block;
    width: 80%;
    height: 80%;
    margin: 0 auto;
  }
  input:checked + .icon-menu {
    color: #e33;
    animation-play-state: running;
  }
  ul {
    display: none; /* 默认隐藏 */
    list-style: none;
    align-items: center;
    background-color: #dee;
    width: max-content;
    position: absolute;
    border-radius: 0 0 0rem 1rem;
    overflow: hidden;
    top: 100%;
    right: 0;
    box-shadow: -1px 1px 1px var(--c-shadow);
  }
  li {
    display: flex;
    place-items: center;
    font-size: 1.75rem;
    padding: 0.75rem 1.25rem;
    &:hover {
      background-color: #6aa;
      a {
        text-decoration: underline;
      }
    }
    a {
      color: teal;
      text-decoration: none;
    }
  }
  /* 响应式 */
  .nav-toggle:has(input:checked) ~ ul {
    display: block;
  }

  @media screen and (min-width: 640px) {
    nav {
      /* 提高一下specificity */
      .nav-toggle {
        display: none;
      }
      ul.menu {
        display: flex !important;
        position: static;
        height: 100%;
        box-shadow: none;
        border-radius: 0;
      }
      li {
        font-size: 1.5rem;
        padding: 0.5rem 1rem;
        height: inherit;
      }
    }
  }
</style>
<script>
  const logo = document.querySelector('.logo');
  logo?.addEventListener('click', () => {
    window.location.href = '/about';
  });
  const toggle = document.querySelector('label.nav-toggle');
  toggle?.addEventListener('click', () => {});
</script>
